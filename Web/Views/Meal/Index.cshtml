@model IEnumerable<Service.Entities.Meal>
@using Microsoft.AspNetCore.Identity

@{
    ViewData["Title"] = "Index";
}

<h1>List Meal In HaDVH's Restaurant'</h1>

@if (Model.Count() == 0)
{
    @if (User.IsInRole("Admin"))
    {
        <a href="/Meal/CreateMeal" class="btn border-primary">Create new Meal</a>
    }
    else
    {
        <div>The Ha's restaurant dont have any bussiness right now</div>
        <div> Please contact <email mail-to="hadvh@fsoft.com.vn"> </email> </div>
    }
}
<table class="table">
    <thead>
        <tr>
@*            <th>
                @Html.DisplayNameFor(model => model.MealID)
            </th>*@
            <th>
                @Html.DisplayNameFor(model => model.MealName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MealDescription)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Quantity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MealImage)
            </th>
            <th>
                @if (User.IsInRole("Admin") && Model.Count() != 0)
                {
                    <a href="/Meal/CreateMeal" class="btn border-primary">Create new Meal</a>
                }
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
@*                <td>
                    @Html.DisplayFor(modelItem => item.MealID)
                </td>*@
                <td>
                    @Html.DisplayFor(modelItem => item.MealName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MealDescription)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Quantity)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    <img src="~/Images/@item.MealImage" class="rounded-circle" width="60px" height="60px" asp-append-version=true />
@*                    @Html.DisplayFor(modelItem => item.MealImage)*@
                </td>
                <td>
                    @if (User.IsInRole("Admin"))
                    {
                        @Html.ActionLink("Edit", "Edit", new {  id=item.MealID  })
                        @Html.ActionLink("Delete", "Delete", new { id=item.MealID })
                    }
                    @Html.ActionLink("Details", "MealDetail","Meal", new { id=item.MealID })
                </td>
            </tr>
        }
    </tbody>
</table>
